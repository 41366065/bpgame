{
    "manifest_version": 3,
    "name" : "bpgame_0.2",
    "author" : "_D2",
    "version" : "0.2.0",
    "description" : "bpgame_0.2",
    "icons" : {
        "64" : "icon.png"
    },
    "permissions" : ["storage", "activeTab", "scripting", "tabs"],
    "background":{
        "service_worker": "scripts/backend.js"
    },
    "action":{
        "default_title": "enjoy the game!",
        "default_icon" : "icon.png",
        "default_popup" : "popup.html"
    },
    "content_scripts":[
        {
            "matches": ["https://www.bilibili.com/video/*"],
            "js": ["scripts/bplistener.js"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources":[
        {
            "matches": ["<all_urls>"],
            "resources" : ["scripts/Assests/*"]
        }
    ]
}